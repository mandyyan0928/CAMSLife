<div id="incomesimulator">
    <div class="row form-group">
        <div class="col-md-3">
            Year
        </div>
        <div class="col-md-2">
            <select required data-placeholder="Year" id="Year" class="form-control">
                <option value="2020">2020</option>
                <option value="2021" selected>2021</option>
                <option value="2021">2022</option>
                <option value="2021">2023</option>

            </select>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-3">
            Months
        </div>
        <div class="col-md-2">
            <select required data-placeholder="Month" onchange="OnNumberMonthChange(this.value)" id="Month" class="form-control">
                <option value="3" selected>3</option>
                <option value="6">6</option>
                <option value="9">9</option>
                <option value="12">12</option>
            </select>
        </div>
    </div>

    <div class="row form-group">
        <div class="col-md-3">
            Product Price
        </div>
        <div class="col-md-2">
            <input class="form-control" type="number" value="300" id="price" onchange="CalPrice(this.value)" />
        </div>
    </div>

    <!--Income-->
    <div class=" table-responsive" div="divincome">

        <table class="table table-bordered" id="tblincome">
            <thead>
                <tr id="tr1" class="trhead">
                    <th> </th>
                    <th> Total Cases</th>

                </tr>

            </thead>

            <tbody>
                <tr id="tr2">
                    <th>Personal Producer</th>
                    <td id="totalcase">0</td>
                </tr>
                <tr id="tr3">
                    <th>Product Price</th>
                    <td></td>
                </tr>
                <tr id="tr4">
                    <th>Commission</th>
                    <td></td>
                </tr>
                <tr id="tr5">
                    <th>Recruitment</th>
                    <td></td>
                </tr>
                <tr id="tr6">
                    <th rowspan="2">ACE</th>
                    <td id="acesumtotal" rowspan="2">
                        0
                    </td>
                </tr>
                <tr id="tr7">
                </tr>

            </tbody>
        </table>


    </div>
    <div class="form-group row">
        <div class="col-md-12 text-right mt-3 mb-3">
            <button type="button" class="btn btn-primary" onclick="UpdateSuccess()">Update <i class="icon-paperplane ml-2"></i></button>
        </div>
    </div>

    <!--Commission-->
    <div class=" table-responsive mt-5">
        <h5> Commission</h5>
        <table class="table table-bordered" id="tblcommission">
            <thead>
                <tr>
                    <th> </th>
                    <th> Total Group</th>
                    <th> Total Cases</th>
                    <th> Product Price</th>
                    <th> Commission</th>
                    <th> Total Commission</th>
                    <th> Total Accumulated Commission</th>

                </tr>

            </thead>

            <tbody>
                <tr>
                    <th>Personal Producer</th>
                    <td>1</td>
                    <td id="commCase" class="commCase"></td>
                    <td id="commPrice" class="commPrice">300</td>
                    <td><input type="number" class="form-control" id="commPercent" value="30" onchange="CalComm(this.value)"/></td>
                    <td>RM3,240.00</td>
                    <td></td>
                </tr>
                <tr id="directgroup">
                    <th>Direct Group</th>
                    <td><input type="number" class="form-control" id="group-0" value="5" onchange="CaltotalComm()" /></td>
                    <td id="commCase-0" class="commCase"></td>
                    <td id="commPrice-0" class="commPrice">300</td>
                    <td><input type="number" class="form-control comm" id="comm-0" value="6" onchange="CaltotalComm()" /></td>
                    <td id="totalcomm-0"></td>
                    <td id="ac-0">RM6,480.00</td>
                </tr>
                <tr>
                    <th> Group 1</th>
                    <td><input type="number" class="form-control" value="25" onchange="CaltotalComm()" /></td>
                    <td id="commCase" class="commCase"></td>
                    <td class="commPrice">300</td>
                    <td><input type="number" class="form-control" value="4" onchange=CaltotalComm() /></td>
                    <td id="totalcomm-1"></td>
                    <td id="ac-1">RM17,280.00</td>
                </tr>
                <tr>
                    <th> Group 2</th>
                    <td><input type="number" class="form-control" value="125" /></td>
                    <td id="commCase" class="commCase"></td>
                    <td class="commPrice">300</td>
                    <td><input type="number" class="form-control" value="4" /></td>
                    <td id="totalcomm-2"></td>
                    <td>RM71,280.00</td>
                </tr>
                <tr>
                    <th> Group 3</th>
                    <td><input type="number" class="form-control" value="625" /></td>
                    <td id="commCase" class="commCase"></td>
                    <td class="commPrice">300</td>
                    <td><input type="number" class="form-control" value="2" /></td>
                    <td id="totalcomm-3"></td>
                    <td>RM206,280.00</td>
                </tr>

            </tbody>
        </table>
        <div class="row form-group">
            <div class="col-md-12 text-right mt-3 mb-3">
                <button type="button" class="btn btn-primary d-inline" id="bootbox_form" data-toggle="modal" data-target="#modal_group"> <i class="icon-plus-circle2"></i> </button>
                <button type="button" class="btn btn-primary" onclick="AddCommission()">Update <i class="icon-paperplane ml-2"></i></button>
            </div>
        </div>
    </div>
</div>

<!-- group commission modal -->
<div id="modal_group" class="modal fade" tabindex="-1">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header pb-3">
                <h5 class="modal-title" id="groupName">Group 4 </h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body py-0">
                <form id="add-group">
                    <fieldset>
                        <div class="form-group row">
                            <label class="col-form-label col-lg-3">Commission %</label>
                            <div class="col-lg-8">
                                <input type="number" id="Commission" name="Commission" class="form-control">
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>

            <div class="modal-footer pt-3">
                <button type="button" class="btn btn-link" data-dismiss="modal">Close</button>
                <button type="button" onclick="AddGroup()" class="btn btn-primary">Add</button>
            </div>
        </div>
    </div>
</div>
<!-- /group modal -->

