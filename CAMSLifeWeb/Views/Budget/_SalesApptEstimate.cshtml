@using Newtonsoft.Json
@using CaliphWeb.ViewModel.Data;
@using CaliphWeb.Helper
@model CaliphWeb.Models.API.Budget.Income
<form id="frmTargetAppt">
    <input type="hidden" name="BudgetId" value="@Model.IncomeData.BudgetId"/>
    <table class="table table-bordered">

        <tbody>
            <tr>
                <td>
                    Goal AFYC
                </td>
                <td>
                    <label id="salesApptEstimate_Premium">  </label>
                </td>
            </tr>
            <tr>
                <td>
                    Average Premium
                </td>
                <td>
                    <label id="salesApptEstimate_AverageSize"></label>
                </td>

            </tr>
            <tr>
                <td>
                    Numer Of Cases Required
                </td>
                <td>
                    <label id="salesApptEstimate_NoOfCases"></label>
                </td>

            </tr>
            <tr>
                <td>
                    Closing Ratio %
                </td>
                <td>
                    <input type="number" required class="form-control" id="salesApptEstimate_ClosingRatio" name="TargetApptClosingRatio" value="@Model.IncomeData.TargetApptClosingRatio.ToString("n0")" onchange="CalSalesApptEstimateClosingRatio()" />

                </td>

            </tr>
            <tr>
                <td>
                    Total Appointment
                </td>
                <td>
                    <label id="salesApptEstimate_TotalAppt"></label>

                </td>

            </tr>

            <tr>
                <td>
                    Appointment Per Month

                </td>
                <td>
                    <label id="salesApptEstimate_ApptPerMonth"></label>

                </td>

            </tr>
            <tr>
                <td>
                    Appointment Per Week

                </td>
                <td>
                    <label id="salesApptEstimate_ApptPerWeek"></label>

                </td>

            </tr>
            <tr>
                <td>
                    Appointment Per Day

                </td>
                <td>
                    <label id="salesApptEstimate_ApptPerDay"></label>

                </td>

            </tr>

            <tr>
                <td>
                    Call Ratio %
                </td>
                <td>
                    <input type="number" class="form-control" required id="salesApptEstimate_CallRatio" name="TargetApptCallRatio" value="@Model.IncomeData.TargetApptCallRatio.ToString("n0")" onchange="CalSalesApptEstimateCallRatio()" />

                </td>

            </tr>
            <tr>
                <td>
                    Calls Per Week

                </td>
                <td>
                    <label id="salesApptEstimate_CallsPerWeek"></label>

                </td>

            </tr>
        </tbody>
    </table>
</form>
<div class="mt-3 mb-3 text-right">
    <button type="button" class="btn btn-primary" onclick="UpdateTargetAppt()">Update <i class="icon-paperplane ml-2"></i></button>
</div>