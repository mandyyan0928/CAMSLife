
@{
    ViewBag.Title = "Add";
}
@using CaliphWeb.ViewModel;
@model AddClientViewModel

<script src="~/global_assets/js/demo_pages/form_validation.js"></script>
<script src="~/global_assets/js/demo_pages/form_input_groups.js"></script>
<!-- Page header -->
<div class="page-header page-header-light">
    <div class="page-header-content header-elements-lg-inline">
        <div class="page-title d-flex">
            <h4><i class="icon-user-plus"></i> <span class="font-weight-semibold">Add Client</span></h4>
            <a href="#" class="header-elements-toggle text-body d-lg-none"><i class="icon-more"></i></a>
        </div>


    </div>

    <div class="breadcrumb-line breadcrumb-line-light header-elements-lg-inline">
        <div class="d-flex">
            <div class="breadcrumb">
                <a class="breadcrumb-item"><i class="icon-users4 mr-2"></i> Client</a>
                <a class="breadcrumb-item">Add Client</a>
            </div>

            <a href="#" class="header-elements-toggle text-body d-lg-none"><i class="icon-more"></i></a>
        </div>

    </div>
</div>
<!-- /page header -->

<div class="mb-3">
    <h6 class="mb-0 font-weight-semibold">
    </h6>
</div>

<form id="add-client" class="form-validate-jquery">
    <div class="row">
        <div class="col-lg-6">
            <!-- Form inputs -->
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="card-title">Basic Info</h5>
                </div>
                <div class="card-body">
                    <fieldset class="mb-3">
                        <input type="hidden" id="ClientLeadId" name="ClientLeadId" value="@Model.RefLeadsId">
                        <input type="hidden" id="AgentLeadId" name="AgentLeadId" value="@Model.AgentLeadId">
                        <div class="form-group row">
                            <label class="col-form-label col-lg-3">Name<span class="text-danger">*</span></label>
                            <div class="col-lg-8">
                                <input type="text" id="name" name="Name" class="form-control" value="@Model.ClientName" required>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-form-label col-lg-3">Contact<span class="text-danger">*</span></label>
                            <div class="col-lg-8">
                                <input type="text" id="contactno" name="ContactNo" class="form-control" value="@Model.HP" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label col-lg-3">Source<span class="text-danger">*</span></label>
                            <div class="col-lg-8">
                                <select class="custom-select" name="SourceId" required>
                                    <option value="">Please Select</option>
                                    @foreach (var source in Model.Source)
                                    {
                                        <option value="@source.MasterDataId">@source.Name</option>
                                    }

                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label col-lg-3">Annual Income<span class="text-danger">*</span></label>
                            <div class="col-lg-8">
                                <select class="custom-select" name="AnnualIncomeId" required>
                                    <option value="">Please Select</option>
                                    @foreach (var source in Model.AnnualIncome)
                                    {
                                        <option value="@source.MasterDataId">@source.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label col-lg-3">Age<span class="text-danger">*</span></label>
                            <div class="col-lg-8">
                                <select class="custom-select" name="AgeId" required>
                                    <option value="">Please Select</option>
                                    @foreach (var source in Model.AgeRange)
                                    {
                                        <option value="@source.MasterDataId">@source.Name</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-form-label col-lg-3">Occupation<span class="text-danger">*</span></label>
                            <div class="col-lg-8">
                                <select class="custom-select" name="OccupationId" required>
                                    <option value="">Please Select</option>
                                    @foreach (var source in Model.Occupation)
                                    {
                                        <option value="@source.MasterDataId">@source.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-form-label col-lg-3">Marital Status<span class="text-danger">*</span></label>
                            <div class="col-lg-8">
                                <select class="custom-select" name="MaritalId" required>
                                    <option value="">Please Select</option>
                                    @foreach (var source in Model.MaritalStatus)
                                    {
                                        <option value="@source.MasterDataId">@source.Name</option>
                                    }
                                </select>
                            </div>
                        </div>

                    </fieldset>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="card-title">Relationship</h5>
                </div>
                <div class="card-body">
                    <div class="form-group row">
                        <label class="col-form-label col-lg-4">
                            Length Of Time Known<span class="text-danger">*</span>
                        </label>
                        <div class="col-lg-7">
                            <select class="custom-select" name="LengthOfTimeKnownId" required>
                                <option value="">Please Select</option>
                                @foreach (var source in Model.LengthOfTimeKnown)
                                {
                                    <option value="@source.MasterDataId">@source.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-lg-4">
                            How Well Known<span class="text-danger">*</span>
                        </label>
                        <div class="col-lg-7">
                            <select class="custom-select" name="HowWellKnownId" required>
                                <option value="">Please Select</option>
                                @foreach (var source in Model.HowWellKnown)
                                {
                                    <option value="@source.MasterDataId">@source.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-lg-4">
                            How Often Seen In A Year<span class="text-danger">*</span>
                        </label>
                        <div class="col-lg-7">
                            <select class="custom-select" name="HowOftenSeenInAYearId" required>
                                <option value="">Please Select</option>
                                @foreach (var source in Model.HowOftenSeenInAYear)
                                {
                                    <option value="@source.MasterDataId">@source.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-lg-4">
                            Could Approach On Business<span class="text-danger">*</span>
                        </label>
                        <div class="col-lg-7">
                            <select class="custom-select" name="CouldApproachOnBusinessId" required>
                                <option value="">Please Select</option>
                                @foreach (var source in Model.CouldApproachOnBusiness)
                                {
                                    <option value="@source.MasterDataId">@source.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-form-label col-lg-4">
                            Ability To Provide Referrals<span class="text-danger">*</span>
                        </label>
                        <div class="col-lg-7">
                            <select class="custom-select" name="AbilityToProvideRefId" required>
                                <option value="">Please Select</option>
                                @foreach (var source in Model.AbilityToProvideReferrals)
                                {
                                    <option value="@source.MasterDataId">@source.Name</option>
                                }
                            </select>
                        </div>

                    </div>
                </div>

            </div>

        </div>

    </div>
</form>

<div class="row form-group m-2">
    <div class="col-lg-12">
        <div class="text-right float-right">
            <button type="button" class="btn btn-primary" onclick="AddClient()">Submit <i class="icon-paperplane ml-2"></i></button>
        </div>
    </div>
</div>

@section Scripts{

    <script type="text/javascript">
                var swalInit = swal.mixin({
                    buttonsStyling: false,
                    customClass: {
                        confirmButton: 'btn btn-primary',
                        cancelButton: 'btn btn-light',
                        denyButton: 'btn btn-light',
                        input: 'form-control'
                    }
                });


        function AddClient() {
            var form = $("#add-client");
            form.validate();
            if (form.valid()) {
                var formData = $('#add-client').serialize();
                $.ajax({
                   // url: '@Url.Action("Add", "Client")',
                        url: '/Client/Add',
                    type: 'POST',
                    data: formData,
                    success: function (response) {

                        form.trigger('reset');
                        swalInit.fire({
                            title: 'Success!',
                            text: 'Client added successfully!',
                            icon: 'success'
                        });
                    }
                });

            }
        }
    </script>
}
